{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "quilessvr configuration",
  "description": "Configuration schema for quilessvr.",
  "type": "object",
  "properties": {
    "quiles": {
      "description": "Configuration of Quiles services",
      "type": "object",
      "properties": {
        "ctl": {
          "description": "Configuration of the Quiles administrative interface",
          "type": "object",
          "properties": {
            "server": {
            }
          }
        },
        "srv": {
          "description": "Configuration of the Quiles server process",
          "type": "object",
          "properties": {
            "identity": {
              "description": "The server's Identity",
              "type": "object",
              "properties": {
                "port": {
                  "description": "The port to listen on.",
                  "type": "number",
                  "format": "integer",
                  "default": 8090
                }
              }
            }
          }
        }
      }
    }
  }
}